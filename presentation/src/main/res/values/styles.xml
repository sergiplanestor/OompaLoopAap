<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Texts -->
    <style name="Text">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <!-- Buttons -->
    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/teal_a100</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/teal_a100</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/teal_a100</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/teal_a100</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/teal_a100</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:colorAccent">@color/teal_a100</item>
    </style>

    <style name="TextInputText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textCursorDrawable">@drawable/cursor_dark</item>
        <item name="android:textColorHighlight">@color/gray</item>
    </style>

    <!-- Bottom sheet bkg -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalStyle</item>
    </style>

    <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet_background</item>
    </style>

</resources>